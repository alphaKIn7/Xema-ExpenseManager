<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/transaction_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"

        android:layout_marginBottom="10dp"

        android:foreground="?android:attr/selectableItemBackground"

        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/dark_blue">


        <TextView
            android:id="@+id/month_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="June, 2020"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="In the Limit"
            android:textColor="#4EC54F"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rupee_symbol_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:text="â‚¹"
            android:textColor="#C24B12"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spends_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:text="20,000"
            android:textColor="#C24B12"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_card"
        app:layout_constraintEnd_toEndOf="@+id/transaction_card"
        app:layout_constraintStart_toStartOf="@+id/transaction_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/card_stroke_green" />

</androidx.constraintlayout.widget.ConstraintLayout>